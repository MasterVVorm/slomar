{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2017"],
    "types": ["node"],
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@entities": ["src/entities"],
      "@initializers/*": ["src/initializers/*"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
